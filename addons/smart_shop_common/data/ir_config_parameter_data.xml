<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Master Database -->
        <record id="master_db_name" model="ir.config_parameter">
            <field name="key">master_dbname</field>
            <field name="value">0</field>
        </record>

        <!-- Master XML-RPC user -->
        <record id="master_xmlrpc_user" model="ir.config_parameter">
            <field name="key">master_xmlrpc_user</field>
            <field name="value">xmlrpc</field>
        </record>

        <!-- Master XML-RPC password -->
        <record id="master_xmlrpc_pwd" model="ir.config_parameter">
            <field name="key">master_xmlrpc_pwd</field>
            <field name="value">0</field>
        </record>

        <!-- Master XML-RPC protocol -->
        <record id="master_xmlrpc_protocol" model="ir.config_parameter">
            <field name="key">master_xmlrpc_protocol</field>
            <field name="value">http</field>
        </record>

        <!-- Master XML-RPC host -->
        <record id="master_xmlrpc_host" model="ir.config_parameter">
            <field name="key">master_xmlrpc_host</field>
            <field name="value">localhost</field>
        </record>

        <!-- Master XML-RPC port -->
        <record id="master_xmlrpc_port" model="ir.config_parameter">
            <field name="key">master_xmlrpc_port</field>
            <field name="value">8069</field>
        </record>

    </data>
</odoo>
